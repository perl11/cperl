    modparts = newAV();
    {
        char *mn = SvPVX(module);
        char *cur = mn;
        int utf8 = SvUTF8(module);
        for (;; cur++) {
            if (!*cur) {
                AV_PUSH(modparts, newSVpvn_flags(mn, cur-mn, utf8));
                break;
            }
            else
